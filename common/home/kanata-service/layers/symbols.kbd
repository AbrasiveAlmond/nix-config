;; TODO:
;; add combo on "h,"
;; may as well try making bracket hold into the close + left arrow macro.

;; add combos for closed brackets, already pressing the combo gives
;; closed brackets 90% of the time, so why not 100%

(defalias
  = (macro =) ;; only rapid fire =+ doesn't work.
  ;; fixes trouble with unshift causing => roll (right after layer switch)
  ;; causing kanata to output .= or ,=.
  | S-\
  & S-7
  # S-3
  $ S-4
  % S-5
  : S-;
  :: (macro (@: @:))
  ? S-/
  '' (tap-hold 150 150 S-' (macro S-' S-' S-'))
  ' (tap-hold 150 150 ' (macro ' ' '))
  ` (tap-hold 150 150 ` (macro ` ` `))
  bk (macro . . /)
)

;; Bracket shite
(defalias
     [ (fork
          (macro ([ ] left))
          [
          (nop0)
     )

     ] (fork
          ]
          (macro (] left))
          (nop0)
     )

     {} (fork
          (macro (S-[ S-] left))
          S-[
          (nop0)
     )

     { S-[

     } (fork
          S-]
          (macro (S-] left))
          (nop0)
     )

     < S-,

     > (fork
          S-.
          (macro (S-. left))
          (nop0)
     )
)
